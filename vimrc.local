" [> Typescript <]

let g:syntastic_typescript_tsc_fname = ''

" [> Rust <]

let g:ftplugin_rust_source_path = $RUST_SRC_PATH
let g:rustfmt_autosave = 1
let g:rustfmt_fail_silently = 0


